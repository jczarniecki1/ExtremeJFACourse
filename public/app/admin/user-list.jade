.container.simple-admin-page
    table.table.table-hover.table-condensed
        tr
            th
            th Name
            th Username
            th Roles
            th Ratings
            th Messages
            th Actions
        tr(ng-repeat="user in users")
            td
                i.icon.icon-user
            td {{ user.firstName + ' ' + user.lastName }}
            td
                a(href="mailto:{{ user.username }}")
                    i.icon.icon-address-book
                    | &nbsp;{{ user.username | capitalize }}
            td {{ user.roles.join(', ') }}
            td
                a(href="/admin/ratings/{{ user._id }}")
                    i.icon.icon-star
                    | &nbsp;{{ user.ratingCount }}
            td
                a(href="/admin/messages/{{ user._id }}")
                    i.icon.icon-envelope
                    | &nbsp;{{ user.unreadMessages }} / {{ user.allMessages }}
            td
                a.btn.btn-xs.btn-default(ng-click="lock(user._id)")
                    i.icon.icon-unlocked
                | &nbsp;
                a.btn.btn-xs.btn-default(ng-click="edit(user._id)")
                    i.icon.icon-pencil2
                | &nbsp;
                a.btn.btn-xs.btn-danger(ng-click="delete(user._id)")
                    i.icon.icon-remove2