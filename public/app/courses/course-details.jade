.container
    h1 {{ course.title }}
    .row
        .col-md-6
            h3(ng-show="course.featured") Featured
            h3 Published on {{ course.published | date }}

        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in course.tags") {{ tag }}
    .row(ng-show="identity.currentUser.isAdmin()")
        .col-md-2
            a(href="/courses/{{ course._id }}/challenge/new") Add challenge

    .row
        .col-md-12(ng-include="'/partials/challenges/challenge-list'")